{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "es2017"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "~assets/*": [
        "public/*"
      ],
      "~components/*": [
        "src/components/*"
      ],
      "~containers/*": [
        "src/containers/*"
      ],
      "~pages/*": [
        "src/pages/*"
      ],
      "~styles/*": [
        "src/styles/*"
      ],
      "~tests/*": [
        "src/tests/*"
      ],
      "~types/*": [
        "src/types/*"
      ],
      "~utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "./node_modules/",
    "./node_modules/*",
    ".next",
    "out"
  ]
}